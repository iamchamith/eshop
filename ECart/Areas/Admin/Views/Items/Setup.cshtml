@using ECart.Areas.Admin.Models;
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<!-- /.row -->
<br />
<ul class="nav nav-pills">
    <li class="active"><a data-toggle="pill" href="#home">Setup</a></li>
    <li><a data-toggle="pill" href="#menu1">Images</a></li>
</ul>
<br />
<div class="tab-content">
    <div id="home" class="tab-pane fade in active">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @{ Html.RenderAction("_EntitySetupControlles", "EntityComman", new { type = Enums.EntityHeader.Items });}
                    </div>
                    <div class="panel-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <form role="form">
                                    <div class="row">
                                        <div class="col-lg-8">
                                            <div class="form-group">
                                                <label>Product name</label>
                                                <input class="form-control" placeholder="Enter Product name" id="txtItemName" name="txtItemName">
                                            </div>
                                        </div>
                                        <div class="col-lg-4">
                                            <input type="checkbox" id="chkItemEnable" class="entitySetupIsActive" />
                                            <br />
                                            <b>Active ?</b>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="form-group">
                                                        <label>Brand</label><br />
                                                        <input id="ddBrand" name="ddBrand" class="form-control"  style="width:100%"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="form-group">
                                                        <label>Category</label>
                                                        <input id="ddCategories" name="ddCategories" class="form-control" style="width:100%"/>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="form-group">
                                                        <label>Discription</label>
                                                        <textarea rows="3" id="txtDiscription" name="txtDiscription"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="form-group">
                                                        <label>Price</label>
                                                        <input id="txtPrice" style="width:100%" />
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row">
                                                <div class="col-lg-12">
                                                    <div class="form-group">
                                                        <label>SEO</label>
                                                        <textarea class="form-control" rows="3" id="txtSeo"></textarea>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </form>
                            </div>

                        </div>
                        <!-- /.row (nested) -->
                    </div>
                    <!-- /.panel-body -->
                </div>
                <!-- /.panel -->
            </div>
            <!-- /.col-lg-12 -->
        </div>
    </div>
    <div id="menu1" class="tab-pane fade">
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        @{ Html.RenderAction("_EntitySetupControlles", "EntityComman", new { type = Enums.EntityHeader.Items });}
                    </div>
                    <div class="panel-body">
                        <h3>Images</h3>
                        @{ Html.RenderAction("_Images", "Items");}
                    </div>
                </div>
            </div>
        </div>
        </div>
  </div>
    <input type="hidden" name="hndProductId" id="hndProductId" value="0" />
<input type="hidden" name="hndProductImage" id="hndProductImage" value="no.jpg" />
 @section moduleScript{
        <script src="~/asset/ts/appts/items/setup.js"></script>
}
