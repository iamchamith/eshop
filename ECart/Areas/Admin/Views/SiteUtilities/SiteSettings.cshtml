
@{
    ViewBag.Title = "SiteSettings";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Site Settings</h2>
<hr />
<div id="content">
    <div class="form-group">
        <label for="exampleInputEmail1">Site Name</label>
        <input type="text" class="form-control" id="txtSiteName" placeholder="Site Name"  data-bind="value: siteName" />
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Contact Email</label>
        <input type="text" class="form-control" id="txtContactEmails" name="txtContactEmails" placeholder="enter email address" data-bind="value:contactEmail" />
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Money Type</label>
        <input type="text" class="form-control" id="txtMoneyType" placeholder="$" data-bind="value:moneyType">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Phone Number</label>
        <input type="text" class="form-control" id="txtPhoneNumber" name="txtPhoneNumber" placeholder="+94718920205" data-bind="value:phoneNumber"/>
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Fb Link</label>
        <input type="text" class="form-control" id="txtFbLink" name="txtFbLink" placeholder="www.fb.com/yourshop" data-bind="value:fbLink" />
    </div>

    <div class="form-group">
        <label for="exampleInputPassword1">SEO</label>
        <textarea data-bind="value:seo" class="form-control" id="txtSeo"></textarea>
    </div>

    <div class="row">
        <div class="col-lg-6 col-sm-6 col-md-6">
            <div class="form-group">
                <label for="exampleInputPassword1">Logo</label>
                <input type="file" id="flLogo" />
            </div>
        </div>
        <div class="col-lg-6 col-sm-6 col-md-6">
             <img src="#"  width="120px" height="120px" class="img-thumbnail" id="imgLogo"/>
        </div>
    </div>
    
    <button type="button" class="btn btn-success" id="btnSaveSettings">Save</button>
</div>
<br /><br />
<input type="hidden" name="hndImageUrl" id="hndImageUrl" value="no.jpg" />
@section moduleScript{
<script src="~/asset/ts/appts/adminSite/siteSettings.js"></script>

}
