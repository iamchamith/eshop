@using ECart.Areas.Admin.Models;
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<!-- /.row -->
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                @{ Html.RenderAction("_EntitySetupControlles", "EntityComman", new { type = Enums.EntityHeader.Categories });}
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form role="form">
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="form-group">
                                        <label>Category name</label>
                                        <input class="form-control" placeholder="Enter Category name" id="txtCategoryName" name="txtCategoryName">
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <input type="checkbox"  id="isCategoryEnable" class="entitySetupIsActive"/>
                                    <br />
                                    <b>Active ?</b>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label>Parent</label>
                                                <br />
                                                <input rows="3" id="ddCategoryParent" name="ddCategoryParent" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label>Discription</label>
                                                <textarea rows="3" id="txtDiscription" name="txtDiscription"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label>Seo</label>
                                                <textarea class="form-control" rows="3" id="txtSeo"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <input type="file" id="imgFile">
                                    <br />
                                    <img class="img-rounded" src="http://betanews.com/wp-content/uploads/2022/08/Microsoft-Logo1.jpg" id="imgCaregoryImage"/>
                                </div>

                            </div>

                        </form>
                    </div>

                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
 
<input type="hidden" name="hndFilePath" id="hndFilePath" value="no.jpg" />
<input type="hidden" name="hndCategoryId" id="hndCategoryId" value="0" />
<input type="hidden" name="hndMode" id="hndMode" value="0" />
@section moduleScript{

    <script src="~/asset/ts/appts/categories/setup.js"></script>
}