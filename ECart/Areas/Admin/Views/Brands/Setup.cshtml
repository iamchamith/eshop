@using ECart.Areas.Admin.Models;
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<!-- /.row -->
<br />
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
            @{ Html.RenderAction("_EntitySetupControlles", "EntityComman", new { type = Enums.EntityHeader.Brands});}
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form role="form">
                            <div class="row">
                                <div class="col-lg-8">
                                    <div class="form-group">
                                        <label>Brand name</label>
                                        <input class="form-control" placeholder="Enter Brand name" id="txtBrandName" name="txtBrandName">
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <input type="checkbox" id="chkBrandEnable"/>
                                  </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label>Discription</label>
                                                <textarea  rows="3" id="txtDiscription" name="txtDiscription" placeholder="write brand discription"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div class="form-group">
                                                <label>SEO</label>
                                                <textarea class="form-control" rows="3" id="txtSeo" placeholder="write brand seo"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <input type="file" id="imgFile">
                                    <br />
                                    <img class="img-rounded entitySetupImages" src="http://betanews.com/wp-content/uploads/2022/08/Microsoft-Logo1.jpg" id="imgBrands"/>
                                </div>
                            </div>
                      
                        </form>
                    </div>
                     
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<input type="hidden" id="hndFilePath" />
<input type="hidden" id="hndBrandId" />
<input type="hidden" id="hndCrudType" value="0"/>
@section moduleScript{
   
<script src="~/asset/ts/appts/brands/setup.js"></script>
}